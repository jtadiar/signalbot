# HL Signalbot - environment variables
# Copy to .env and fill in, or run: npm run setup

# Hyperliquid wallet + key
HL_WALLET_ADDRESS=0x0000000000000000000000000000000000000000
HL_PRIVATE_KEY_PATH=~/.config/hl-signalbot/private_key
# HL_PRIVATE_KEY=YOUR_PRIVATE_KEY_HEX

# Telegram pings (optional)
TG_ENABLED=false
TG_CHAT=@your_channel
TG_TOKEN_PATH=~/.config/hl-signalbot/tg_token
# TG_TOKEN=123456:ABCDEF

# Optional overrides
# CONFIG=./config.json
# TRADE_LOG=./trades.jsonl
