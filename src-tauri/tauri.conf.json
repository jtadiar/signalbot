{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "HL Signalbot",
  "version": "1.0.1",
  "identifier": "com.hlsignalbot.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "HL Signalbot",
        "width": 960,
        "height": 680,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../bot/cli.mjs": "bot/cli.mjs",
      "../bot/index.mjs": "bot/index.mjs",
      "../bot/signal_engine.mjs": "bot/signal_engine.mjs",
      "../bot/hl_info.mjs": "bot/hl_info.mjs",
      "../bot/setup.mjs": "bot/setup.mjs",
      "../bot/close.mjs": "bot/close.mjs",
      "../bot/ui.mjs": "bot/ui.mjs",
      "../bot/config.example.json": "bot/config.example.json",
      "../bot/.env.example": "bot/.env.example",
      "../bot/package.json": "bot/package.json",
      "../bot/package-lock.json": "bot/package-lock.json"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
